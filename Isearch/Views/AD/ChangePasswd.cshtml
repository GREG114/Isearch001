@model Isearch.Controllers.pdc

<h1>修改AD[NAS\打印机]密码</h1>

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>


<div class="row">
    <div class="col-md-4">
        <form asp-action="changepasswd">
            <div class="form-group">
                <label class="control-label">请输入您的账号，账号为邮箱前缀，例如liuchao@i-search.com.cn 账号则为liuchao</label>
                <input class="form-control" asp-for="userid" />
                <span asp-validation-for="userid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">当前密码</label>
                <input class="form-control" type="password" asp-for="pd" />
                <span asp-validation-for="pd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">输入密码</label>
                <input class="form-control" id="pd1" type="password" asp-for="newpd" />
                <span asp-validation-for="newpd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">确认密码</label>
                <input class="form-control" id="pd2" type="password" asp-for="newpd2" />
                <span asp-validation-for="newpd2" class="text-danger"></span>
            </div>
            <br />
            <br />
            <div class="form-group">
                <input type="submit" value="确认" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

