@model IEnumerable<Isearch.Models.Training>

@{
    ViewData["Title"] = "培训列表";
}

<h1>培训管理</h1>

<p>
    <a asp-action="Create">录入新数据</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.课程名称)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.培训时长)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.培训讲师)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.培训时间)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.课程名称)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.培训时长)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.培训讲师)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.培训时间)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">编辑</a> |
                <a asp-action="Details" asp-route-id="@item.Id">详情</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">删除</a>
            </td>
        </tr>
}
    </tbody>
</table>
